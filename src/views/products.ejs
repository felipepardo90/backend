<%- include("./partials/head.ejs") %>

<section>
    <h2>PRODUCTOS</h2>
        <% if (products){ %>
            <div class="s__container">
            
                <% products.forEach(item=>{%> 
                    <div class="box">
                        <div class="image">
                            <img src="<%=item.thumbnail%>" alt="product">
                        </div>
                        <div class="info">
                            <h3 class="title"><%=item.title%></h3>
                            <div class="sub__info">
                                <div class="price">$ <%=item.price%></div>
                            </div>
                        </div>
                    </div>
                    <% })  %> 
                </div>
                <% } else {%>
                <p>No hay productos</p>
                <% } %>
                </section>



    